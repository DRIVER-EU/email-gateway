{
  "name": "email-gateway",
  "version": "1.0.0",
  "description": "Driver-eu e-mail gateway",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "npm run build && npm run start:prod",
    "start:dev": "nodemon --signal SIGKILL",
    "start:debug": "nodemon --signal SIGKILL --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/src/index.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "generate-rest": "cd swagger_codegenerator && GenerateCodeWithDocker.bat",
    "docker:build": "docker buildx build -t driver-mailgateway .",
    "docker:tag": "docker tag driver-mailgateway drivereu/driver-mailgateway",
    "docker": "npm run docker:build && npm run docker:tag && docker push drivereu/driver-mailgateway"
  },
  "author": "TNO",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "express": "4.18.2",
    "yargs": "17.7.2",
    "btoa": "^1.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "event-to-promise": "^0.8.0",
    "imap": "^0.8.19",
    "install": "^0.13.0",
    "mailparser": "^3.6.5",
    "nconf": "^0.12.0",
    "node-test-bed-adapter": "3.0.17",
    "nodemailer": "^6.9.7",
    "portable-fetch": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@nestjs/common": "^10.2.7",
    "@nestjs/core": "^10.2.7",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/platform-socket.io": "^10.2.7",
    "@nestjs/swagger": "^7.1.13",
    "@nestjs/websockets": "^10.2.7",
    "@types/imap": "^0.8.39",
    "@types/mailparser": "^3.4.3",
    "@types/node": "^20.8.7",
    "@types/request": "^2.48.11",
    "@types/nodemailer": "^6.4.13",
    "@types/nodemailer-direct-transport": "^1.0.34",
    "@types/nodemailer-smtp-transport": "^2.7.7",
    "@types/valid-url": "1.0.6",
    "@types/btoa": "1.2.4",
    "@types/express": "4.17.20",
    "@types/uuid": "9.0.6",
    "@types/event-to-promise": "0.7.4",
    "@types/request-promise": "4.1.50",
    "@types/nconf": "0.10.5",
    "@types/yargs": "17.0.29",
    "rimraf": "^5.0.5"
  }
}
