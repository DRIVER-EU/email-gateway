    "@types/node": "^11.13.8",
    "axios": "^0.18.0",
    "imap": "^0.8.19",
    "install": "^0.12.2",
    "mailparser": "^2.7.1",
    "nconf": "^0.10.0",
    "node-test-bed-adapter": "^0.8.7",
    "nodemailer": "^6.1.1",
    "portable-fetch": "^3.0.0",
    "reflect-metadata": "^0.1.13",
