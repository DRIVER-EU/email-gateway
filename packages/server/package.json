{
  "name": "email-gateway",
  "version": "1.0.0",
  "description": "Driver-eu e-mail gateway",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "npm run build && npm run start:prod",
    "start:dev": "nodemon --signal SIGKILL",
    "start:debug": "nodemon --signal SIGKILL --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/src/index.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "generate-rest": "cd swagger_codegenerator && GenerateCodeWithDocker.bat",
    "//": {
      "comment": "build_dockerimage: Only for debug, use docker/mailserver/BuildAllDockerImages.bat to build docker images"
    },
    "docker:build": "docker build -t driver-mailgateway .",
    "docker:tag": "docker tag driver-mailgateway drivereu/driver-mailgateway",
    "docker:publish": "npm run docker:build && npm run docker:tag && docker push drivereu/driver-mailgateway"
  },
  "author": "TNO",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^8.2.6",
    "@nestjs/core": "^8.2.6",
    "@nestjs/platform-express": "^8.2.6",
    "@nestjs/platform-socket.io": "^8.2.6",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/websockets": "^8.2.6",
    "@types/imap": "^0.8.35",
    "@types/mailparser": "^3.4.0",
    "@types/node": "^17.0.17",
    "@types/request": "^2.48.8",
    "@types/socket.io-client": "^3.0.0",
    "axios": "^0.25.0",
    "btoa": "^1.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "event-to-promise": "^0.8.0",
    "imap": "^0.8.19",
    "install": "^0.13.0",
    "mailparser": "^3.4.0",
    "nconf": "^0.11.3",
    "node-test-bed-adapter": "^2.2.3",
    "nodemailer": "^6.7.2",
    "portable-fetch": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "rxjs": "^7.5.4",
    "swagger-ui-express": "^4.3.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "uuid": "^8.3.2",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@types/node-fetch": "^3.0.2",
    "@types/nodemailer": "^6.4.4",
    "@types/nodemailer-direct-transport": "^1.0.32",
    "@types/nodemailer-smtp-transport": "^2.7.5",
    "@types/socket.io": "^3.0.2",
    "rimraf": "^3.0.2"
  }
}
