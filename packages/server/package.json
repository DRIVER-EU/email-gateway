{
  "name": "email-gateway",
  "version": "1.0.0",
  "description": "Driver-eu e-mail gateway",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "npm run build && npm run start:prod",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/src/index.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "generate-rest": "cd swagger_codegenerator && GenerateCodeWithDocker.bat",
    "//": {
      "comment": "build_dockerimage: Only for debug, use docker/mailserver/BuildAllDockerImages.bat to build docker images"
    },
    "build_dockerimage": "docker build -t drivereu-mailgateway ."
  },
  "author": "TNO",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^6.11.11",
    "@nestjs/core": "^6.11.11",
    "@nestjs/platform-express": "^6.11.11",
    "@nestjs/platform-socket.io": "^6.11.11",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/websockets": "^6.11.11",
    "@types/imap": "^0.8.32",
    "@types/mailparser": "^2.7.4",
    "@types/node": "^11.15.39",
    "@types/request": "^2.48.5",
    "axios": "^0.18.1",
    "btoa": "^1.2.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.2",
    "event-to-promise": "^0.8.0",
    "imap": "^0.8.19",
    "install": "^0.12.2",
    "mailparser": "^2.8.1",
    "nconf": "^0.10.0",
    "node-test-bed-adapter": "^2.0.8",
    "nodemailer": "^6.4.16",
    "portable-fetch": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "rxjs": "^6.6.3",
    "socketio": "^1.0.0",
    "swagger-ui-express": "^4.1.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "uuid": "^3.4.0",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.5.7",
    "@types/nodemailer": "^4.6.8",
    "@types/nodemailer-direct-transport": "^1.0.31",
    "@types/nodemailer-smtp-transport": "^2.7.4",
    "@types/socket.io": "^2.1.11",
    "rimraf": "^3.0.2"
  }
}
